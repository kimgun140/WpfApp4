<Page x:Class="WpfApp4.Mainmenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mainmenu">

    <Grid Background="White">
        <Button x:Name="btn_login" Content="로그인" HorizontalAlignment="Left" Height="54" Margin="439,90,0,0" VerticalAlignment="Top" Width="100" Click="btn_login_Click"/>
        <TextBlock x:Name="txb1" HorizontalAlignment="Left" Height="20" Margin="212,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="txt_id" HorizontalAlignment="Left" Height="27" Margin="212,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="AAAA"/>
        <PasswordBox x:Name="pwb" HorizontalAlignment="Left" Height="27" Margin="212,117,0,0" VerticalAlignment="Top" Width="170" Password="1234"/>
        <Button x:Name="btn_signup" Content="회원가입" HorizontalAlignment="Left" Height="75" Margin="439,182,0,0" VerticalAlignment="Top" Width="100" Click="btn_signup_Click"/>
    </Grid>
</Page>
